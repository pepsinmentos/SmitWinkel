@using SmitWinkel.CustomRoutes
@using SmitWinkel.Resources

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link href="../../Content/Bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="../../Content/Bootstrap/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>    
    <script src="../../Content/Bootstrap/js/bootstrap.js"></script>
    <script src="../../Content/Bootstrap/js/bootstrap-datetimepicker.min.js"></script>
</head>

<body>
    <div class="headerContainer  clearfix">
        <div class="clearfix nav-container centerMe">
            <ul class="clearfix">
                <li><a href="#">Home</a></li>
                <li><a href="#">How-to</a></li>
                <li><a href="#">Icons</a></li>
                <li><a href="#">Design</a></li>
                <li><a href="#">Web 2.0</a></li>
                <li><a href="#">Tools</a></li>
            </ul>
            <div class="btn-translation">@Html.GlobalisedRouteLink(Common.OtherLanguageName, Common.OtherLanguageKey, ViewContext.RouteData)</div>
        </div>

    </div>
    <div class="banner clearfix">
        <div class="centerMe">
            <img class="logo" src="../../Content/Images/Logo%20copy.jpg" />
        </div>
    </div>
    <div class="bodyContainer clearfix">
        <div class="centerMe clearfix">
            <div class="links-container">
                <div class="pic-links">
                    <div class="pic-links-text">
                        <h3>Book an appointment</h3>
                        <p>Click here and complete the form to make an appointment</p>
                    </div>
                </div>
                <div class="pic-links">
                    <div class="pic-links-text">
                        <h3>New paitient?</h3>
                        <p>Save some time and fill out a new patient registration form online</p>
                    </div>
                </div>
                <div class="pic-links">
                    <div class="pic-links-text">
                        <h3>Office Hours</h3>
                        <p>
                            Monday-Friday:
                            <br />
                            7h30-17h30
                            <div>&nbsp;</div>
                            Saturdays: 
                            (by appointment only) 
                            7h30-11h30
                            <br />
                        </p>
                    </div>
                </div>
            </div>
            <div class="contentContainer centerMe">
                @RenderBody()
            </div>

        </div>
        <div class="centerMe endOfContent">
        </div>
        <div class="centerMe footer-container">
        </div>
    </div>
</body>
</html>
