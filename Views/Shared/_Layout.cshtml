@using SmitWinkel.CustomRoutes
@using SmitWinkel.Resources

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link href="../../Content/Bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="../../Content/Bootstrap/css/datepicker3.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <script src="../../Content/Bootstrap/js/bootstrap.js"></script>
    <script src="../../Content/Bootstrap/js/bootstrap-datepicker.js"></script>
</head>
<body id="admin">
    <div class="wrapper">
        <div id="banner" class="banner">
            <div class="banner-container clearfix">
                <img class="banner-logo" src="Content/Images/logo.png" />
                <div class="banner-text">Smit & Winkel | Dental Surgeons</div>
                <div class="banner-addText">
                    <ul>
                        <li>Tel: 021 919 5559</li>
                        <li>2 Mountainview Drive</li>
                        <li>Bellville</li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="nav">
            <nav class="nav-container">
                <span class="nav-btn"></span>
                <ul class="nav">
                    <li><a href="#">home</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">News</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </nav>
        </div>
        <div id="body" class="body">
            <div class="body-content clearfix">
                <div class="body-page clearfix">
                    @RenderBody()
                </div>

                <div class="body-left clearfix">
                    <div class="clearfix">
                        <div class="link-box">
                            <img src="Content/Images/box1.png" />
                            <div class="link-box-text">
                                <h4>Book an Appointment</h4>
                                <div class="box-descText">
                                    Click here and fill in the form to make an appointment
                                </div>

                            </div>
                        </div>
                        <div class="link-box">
                            <img src="Content/Images/box2.png" />
                            <div class="link-box-text">
                                <h4>New Patient?</h4>
                                <div class="box-descText">
                                    Save some time and fill in a New
                                    Patient Registration Form online
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="clearfix">
                        <div class="link-box greybox">
                            <img src="Content/Images/box3.png" />
                            <div class="link-box-text greyBoxText">
                                <h4>Office Hours</h4>
                                <span>
                                    Monday-Friday:
                                    7h30-17h30
                                </span>
                                <br />
                                <span>
                                    Saturdays:
                                    (by appointment only)
                                    7h30-11h30
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="footer" class="footer"></div>

    </div>
    <script src="@Url.Content("~/Scripts/Common.js")" type="text/javascript"></script>
</body>
</html>
